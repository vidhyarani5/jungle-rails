<h1>Login</h1>

<%= form_tag '/login' do %>
  <div class="form-group row">
    <%= label("user", "Email:", class: "col-sm-2 col-form-label") %>
    <div class="col-sm-10">
      <%= text_field_tag :email, nil, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= label("user", "Password:", class: "col-sm-2 col-form-label") %>
    <div class="col-sm-10">
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
  </div>

  <%= submit_tag "Submit", class: "btn btn-primary" %>
<% end %>
