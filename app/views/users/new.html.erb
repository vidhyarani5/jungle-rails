<header class="page-header">
  <h1>Signup!</h1>
</header>
<%= form_for :user, url: '/users' do |f| %>
  <div class="form-group row">
    <%= label("user", "First Name:", class: "col-sm-2 col-form-label") %>
    <div class="col-sm-10">
      <%= f.text_field :first_name, required: true, class: "form-control"  %>
    </div>
  </div>
  <div class="form-group row">
    <%= label("user", "Last Name:", class: "col-sm-2 col-form-label") %>
    <div class="col-sm-10">
      <%= f.text_field :last_name, required: true, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= label("user", "Email:", class: "col-sm-2 col-form-label") %>
    <div class="col-sm-10">
      <%= f.text_field :email, required: true, class: "form-control", type: "email"%>
    </div>
  </div>
  <div class="form-group row">
    <%= label("user", "Password:", class: "col-sm-2 col-form-label") %>
    <div class="col-sm-10">
      <%= f.password_field :password, required: true, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= label("user", "Password_Confirmation:", class: "col-sm-2 col-form-label") %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, required: true, class: "form-control" %>
    </div>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
